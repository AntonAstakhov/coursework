<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:text="Department"
            android:id="@+id/department"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="Керівник:"
                />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="Manager's name"
                android:id="@+id/manager"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp">


        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="Поточні завдання: "
            android:paddingTop="25dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/actual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1000"
            android:textSize="22sp"
            android:paddingTop="23dp"/>

        <TextView
            android:layout_marginLeft="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="Зриви графіка: "
            android:paddingTop="25dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/overdue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1000"
            android:textSize="22sp"
            android:paddingTop="23dp"/>

        <TextView

            android:layout_marginLeft="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="Виконані завдання: "
            android:paddingTop="25dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/executed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1000"
            android:textSize="22sp"
            android:paddingTop="23dp"/>

        <TextView
            android:layout_marginLeft="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="Завдання на майбутнє: "
            android:paddingTop="25dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/future"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1000"
            android:textSize="22sp"
            android:paddingTop="23dp"/>



    </LinearLayout>


</LinearLayout>
